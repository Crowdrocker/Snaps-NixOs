// Window rules for automatic workspace assignment
window-rule "discord" {
  open-on-output "HDMI-A-1"
  open-on-workspace "3"
}

window-rule "steam" {
  open-on-output "HDMI-A-1" 
  open-on-workspace "4"
}

window-rule "lutris" {
  open-on-output "HDMI-A-1"
  open-on-workspace "4"
}

window-rule "gimp" {
  open-on-output "HDMI-A-1"
  open-on-workspace "5"
}

window-rule "inkscape" {
  open-on-output "HDMI-A-1"
  open-on-workspace "5"
}
