// WehttamSnaps Niri Startup Applications
// Programs to launch on Niri startup

spawn-at-startup {
    // ========================================================================
    // ESSENTIAL SERVICES
    // ========================================================================
    
    // Notification daemon (Dunst)
    command [ "dunst" ]
    
    // Wallpaper daemon
    command [ "swww-daemon" ]
    
    // Set initial wallpaper
    command [ "swww" "img" "~/.config/wallpapers/default.jpg" "--transition-type" "fade" ]
    
    // ========================================================================
    // QUICKSHELL / NOCTALIA
    // ========================================================================
    
    // Launch Quickshell bar
    command [ "quickshell" ]
    
    // ========================================================================
    // AUDIO
    // ========================================================================
    
    // PipeWire session manager (usually started by systemd)
    // command [ "wireplumber" ]
    
    // ========================================================================
    // POLKIT AUTHENTICATION AGENT
    // ========================================================================
    
    command [ "/usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1" ]
    
    // ========================================================================
    // CLIPBOARD MANAGER
    // ========================================================================
    
    command [ "wl-paste" "--watch" "cliphist" "store" ]
    
    // ========================================================================
    // IDLE MANAGEMENT
    // ========================================================================
    
    // Lock screen after 10 minutes of inactivity
    command [ "swayidle" "-w"
        "timeout" "600" "swaylock -f"
        "timeout" "900" "niri msg action power-off-monitors"
        "resume" "niri msg action power-on-monitors"
        "before-sleep" "swaylock -f"
    ]
    
    // ========================================================================
    // SYSTEM TRAY APPLICATIONS
    // ========================================================================
    
    // Network manager applet
    command [ "nm-applet" "--indicator" ]
    
    // Bluetooth manager
    command [ "blueman-applet" ]
    
    // ========================================================================
    // J.A.R.V.I.S. STARTUP
    // ========================================================================
    
    // Play J.A.R.V.I.S. startup sound (handled by systemd user service)
    // See home.nix for systemd service configuration
    
    // ========================================================================
    // BACKGROUND SERVICES
    // ========================================================================
    
    // CoreCtrl for GPU control (if you want it to start automatically)
    // command [ "corectrl" "--minimize-systray" ]
    
    // ========================================================================
    // AUTOSTART APPLICATIONS
    // ========================================================================
    
    // Discord (if you want it to start automatically)
    // command [ "discord" "--start-minimized" ]
    
    // Spotify (if you want it to start automatically)
    // command [ "spotify" ]
    
    // Steam (if you want it to start automatically)
    // command [ "steam" "-silent" ]
}