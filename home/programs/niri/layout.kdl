// WehttamSnaps Niri Layout Configuration
// Scrolling tiling layout settings

layout {
    // ========================================================================
    // GAPS AND SPACING
    // ========================================================================
    
    gaps 8
    
    // Center focused column
    center-focused-column "on-overflow"
    
    // ========================================================================
    // COLUMN PRESETS
    // ========================================================================
    
    preset-column-widths {
        proportion 0.33333
        proportion 0.5
        proportion 0.66667
        proportion 0.75
        proportion 1.0
    }
    
    // ========================================================================
    // DEFAULT COLUMN WIDTH
    // ========================================================================
    
    default-column-width { proportion 0.5; }
    
    // ========================================================================
    // FOCUS RING (Window Border)
    // ========================================================================
    
    focus-ring {
        width 3
        
        // Active window gradient (violet to cyan)
        active-color "#8A2BE2"
        
        // Inactive window
        inactive-color "#00FFFF"
        
        // Active gradient (optional)
        active-gradient from="#8A2BE2" to="#00FFFF" angle=45
    }
    
    // ========================================================================
    // BORDER SETTINGS
    // ========================================================================
    
    border {
        width 2
        
        // Active border
        active-color "#8A2BE2"
        
        // Inactive border
        inactive-color "#1a1b26"
        
        // Active gradient
        active-gradient from="#8A2BE2" to="#00FFFF" angle=45
    }
    
    // ========================================================================
    // STRUTS (Reserved space for bars/panels)
    // ========================================================================
    
    // Reserve space for Quickshell bar at top
    struts {
        top 40
    }
}