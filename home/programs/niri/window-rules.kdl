// WehttamSnaps Niri Window Rules
// Application-specific window behavior

// ============================================================================
// WORKSPACE ASSIGNMENTS
// ============================================================================

// Workspace 1: General/Terminal
window-rule {
    match app-id="kitty"
    default-column-width { proportion 0.5; }
}

// Workspace 2: Browser
window-rule {
    match app-id="firefox"
    open-on-workspace 2
    default-column-width { proportion 0.7; }
}

// Workspace 3: Communication
window-rule {
    match app-id="discord"
    open-on-workspace 3
    default-column-width { proportion 0.6; }
}

window-rule {
    match title="Twitch"
    open-on-workspace 3
}

// Workspace 4: Photography/Design
window-rule {
    match app-id="gimp"
    open-on-workspace 4
    open-maximized true
}

window-rule {
    match app-id="krita"
    open-on-workspace 4
    open-maximized true
}

window-rule {
    match app-id="inkscape"
    open-on-workspace 4
    open-maximized true
}

window-rule {
    match app-id="darktable"
    open-on-workspace 4
    open-maximized true
}

// Workspace 5: Gaming
window-rule {
    match app-id="steam"
    open-on-workspace 5
    default-column-width { proportion 0.8; }
}

window-rule {
    match app-id="lutris"
    open-on-workspace 5
}

window-rule {
    match app-id="heroic"
    open-on-workspace 5
}

// Workspace 6: Streaming
window-rule {
    match app-id="com.obsproject.Studio"
    open-on-workspace 6
    open-maximized true
}

// ============================================================================
// FLOATING WINDOWS
// ============================================================================

// File pickers
window-rule {
    match title="Open File"
    open-floating true
    default-column-width { fixed 800; }
}

window-rule {
    match title="Save File"
    open-floating true
    default-column-width { fixed 800; }
}

// System dialogs
window-rule {
    match app-id="pavucontrol"
    open-floating true
    default-column-width { fixed 600; }
}

window-rule {
    match app-id="qpwgraph"
    open-floating true
    default-column-width { fixed 1000; }
}

// Quickshell widgets
window-rule {
    match title="WehttamSnaps Power Menu"
    open-floating true
    open-centered true
    default-column-width { fixed 400; }
}

window-rule {
    match title="WehttamSnaps Work Launcher"
    open-floating true
    open-centered true
    default-column-width { fixed 500; }
}

window-rule {
    match title="WehttamSnaps Game Launcher"
    open-floating true
    open-centered true
    default-column-width { fixed 500; }
}

window-rule {
    match title="WehttamSnaps Welcome"
    open-floating true
    open-centered true
    default-column-width { fixed 700; }
}

window-rule {
    match title="WehttamSnaps Settings"
    open-floating true
    open-centered true
    default-column-width { fixed 800; }
}

// ============================================================================
// FULLSCREEN APPLICATIONS
// ============================================================================

// Games should open fullscreen
window-rule {
    match title="Cyberpunk 2077"
    open-fullscreen true
}

window-rule {
    match title="The Division"
    open-fullscreen true
}

window-rule {
    match title="The Division 2"
    open-fullscreen true
}

window-rule {
    match title="Fallout 4"
    open-fullscreen true
}

window-rule {
    match title="Watch Dogs"
    open-fullscreen true
}

window-rule {
    match title="The First Descendant"
    open-fullscreen true
}

// ============================================================================
// OPACITY RULES
// ============================================================================

window-rule {
    match app-id="kitty"
    opacity 0.95
}

window-rule {
    match app-id="thunar"
    opacity 0.98
}

// ============================================================================
// BORDER COLORS (WehttamSnaps Branding)
// ============================================================================

// Active window - violet
window-rule {
    match is-focused=true
    border-color "#8A2BE2"
}

// Inactive window - cyan
window-rule {
    match is-focused=false
    border-color "#00FFFF"
}

// Urgent window - hot pink
window-rule {
    match is-urgent=true
    border-color "#FF69B4"
}

// ============================================================================
// SPECIAL RULES
// ============================================================================

// Picture-in-Picture
window-rule {
    match title="Picture-in-Picture"
    open-floating true
    default-column-width { fixed 400; }
}

// Spotify
window-rule {
    match app-id="spotify"
    open-on-workspace 9
    default-column-width { proportion 0.6; }
}

// File manager
window-rule {
    match app-id="thunar"
    default-column-width { proportion 0.5; }
}

// System monitor
window-rule {
    match title="btop"
    default-column-width { proportion 0.6; }
}

window-rule {
    match title="nvtop"
    default-column-width { proportion 0.6; }
}

// CoreCtrl (GPU control)
window-rule {
    match app-id="corectrl"
    open-floating true
    default-column-width { fixed 800; }
}

// ============================================================================
// BLOCK FOCUS STEALING
// ============================================================================

window-rule {
    match app-id="steam"
    block-out-from="steam_app_*"
}